---
// Component Imports
import { Icon } from 'astro-icon'
import OrderForm from '../components/OrderForm/Index.svelte'
import HowItWorks from '../components/HowItWorks.svelte'

// Full Astro Component Syntax:
// https://docs.astro.build/core-concepts/astro-components/
---
<html lang="en">

<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width" />
	<meta name="description" content="Find software engineers effectively!">
	<title>Jobrella</title>
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
	<style>
		@font-face {
			font-family: ubuntuCondensed;
			src: url(/UbuntuCondensed.woff);
		}

		:root {
			--jobrella-accent-color: #800000;
			--jobrella-background-color: #ececec;
		}

		html,
		body {
			font-family: ubuntuCondensed;
			margin: 0;
		}

		body {
			background-color: var(--jobrella-background-color);
		}

		main {
			margin: 1em;
		}

		ol li::marker {
			color: var(--jobrella-accent-color);
		}

		footer {
			background-color: black;
			padding-top: 2rem;
			padding-bottom: 2rem;
			color: white;
			text-align: center;
		}

		footer a {
			color: white;
		}

		.footer-column {
			text-align: left;
			min-width: 140px;
			padding: 1em;
			display: inline-block;
		}
	</style>
</head>

<body>
	<main>
		<div style="display:grid; place-items:center;">
			<div style="grid-area: 1/1; z-index:1; margin-top:15%; margin-left:10%">
				<!-- <con>Just do it!</Button> -->
			</div>
			<Icon name="jobrella" style="width:100%; max-height:90vh; grid-area: 1/1" />
		</div>
		<div style="text-align: center;">
			<span style="font-size: 2.2rem; margin-top:4rem; text-align: left; display:inline-block;">
				<HowItWorks>
				</HowItWorks>
			</span>
		</div>
		<h2 style="text-align: center; font-size:2.5rem">Let's do it<span style="color:var(--jobrella-accent-color);">
				!</span></h2>
		<OrderForm client:load />
	</main>
	<footer>
		<div>
			<Icon name="jobrella-light" style="width:3rem;" />
		</div>
		<div class="footer-column">
			<div>Contact: </div>
			<div>+48 726 746 750</div>
			<div>jobrella@jobrella.pl</div>
		</div>
		<div class="footer-column">
			<div>Read: </div>
			<div>
				<a title="Terms & Conditions" target="_blank" href="/terms.pdf" rel="noopener noreferrer">Terms &
					Conditions</a>
			</div>
			<div>
				<a title="Privacy Notice" target="_blank" href="/privacy.pdf" rel="noopener noreferrer">Privacy Notice
				</a>
			</div>
		</div>
		<div style="padding-top:1rem;">Jobrella Â® 2022</div>
	</footer>
</body>

</html>